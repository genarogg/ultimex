    <main>
        <div class="container-imagen">
            <img src="<%= Imagenes.URL %>" alt="">
          </div>
          <div class="container-info-productos" itemscope itemtype="http://schema.org/Product">
            <div class="container-price">
              <div class="titulo" itemprop="name">
                <%= Productos.Nombre %>
              </div>
            </div>
            <div class="container-color">
              <div class="titulo-color">
                <h5>Color</h5>
                <i style="color:rgb(96, 187, 195) ;" class="bi bi-chevron-down"></i>
              </div>
              <div class="text-color hidden" itemprop="color">
                <h4><%= Productos.Color %></h4>
              </div>
            </div>
            <div class="container-detalles">
              <h5>Marca</h5>
              <h4 itemprop="brand"><%= Productos.Marca %></h4>
              <h5>Precio</h5>
              <h1 class="precio" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                <span itemprop="price"><%= Productos.Precio %></span> $
              </h1>
            </div>
            <div class="container-descripcion">
              <div class="titulo-descripcion">
                <h5>Descripcion</h5>
                <i style="color:rgb(96, 187, 195) ;" class="bi bi-chevron-down"></i>
              </div>
              <div class="text-descripcion hidden" itemprop="description">
                <h4><%= Productos.Descripcion %></h4>
              </div>
            </div>
          </div>
            <div class="container-clasificacion">
                <h5>Calificación del cliente</h5>
                <% if (puntuacion === undefined) {
                    puntuacion = { Puntuacion: 0 };
                  } %>
                  <p style="color: white;" class="average-rating">Calificación promedio: <%= Productos.Promedio %></p>
                <% if (user) { %>
                    <p style="color: white; font-size: small;">Recuerda que tienes que comprar el producto para poder realizar una calificación.</p>
                  <p  style="color: white;" class="user-rating">Tu calificación: <%= puntuacion.Puntuacion %></p>
                <% } %>
              </div>
              
              <% if (user) { %>
                <div>
                  <form action="/calificar/<%= Productos.ID %>" method="POST">
                    <label style="display: none;" for="puntuacion" class="form-label" id="puntuacion-label"><%= puntuacion.Puntuacion  %></label>
                    <input type="range" class="form-range" min="1" max="5" step="1" id="puntuacion" name="puntuacion" value="<%= puntuacion.Puntuacion  %>" onchange="updateLabel(this.value)">
                    <div style="color: white;" id="puntuacion-indicator" class="indicator"><%= puntuacion.Puntuacion  %></div>
                    <div class="buttons">
                      <button type="submit" class="btn">Calificar</button>
                    </div>
                  </form>
                </div>
              <% } %>
              
              <div class="buttons">
                <a href="/pago/<%= ID %>" class="btn" style="padding: 20px 30px;">Comprar</a>
              </div>
    </main>
    <script>
        // Toggle

        // Constantes toggle titulos
        const toggleColor = document.querySelector('.titulo-color');
        const toggleDescripcion = document.querySelector('.titulo-descripcion');

        // Constantes contenido texto
        const contentColor = document.querySelector('.text-color');
        const contentDescripcion = document.querySelector('.text-descripcion');

        // Funciones click
        toggleColor.addEventListener('click', () => {
            contentColor.classList.toggle('hidden');
        });

        toggleDescripcion.addEventListener('click', () => {
            contentDescripcion.classList.toggle('hidden');
        });
        function updateLabel(value) {
      document.getElementById('puntuacion-label').textContent = value;
      var indicator = document.getElementById('puntuacion-indicator');
      var range = document.getElementById('puntuacion');
      var rangeWidth = range.offsetWidth;
      var min = parseInt(range.min);
      var max = parseInt(range.max);
      var position = ((value - min) / (max - min)) * rangeWidth;
      indicator.style.left = position + 'px';
      
      if (value == 0) {
        indicator.style.display = 'none';
      } else {
        indicator.style.display = 'block';
        indicator.textContent = value;
      }
    }

    window.addEventListener('load', function() {
      var initialRating = document.getElementById('puntuacion').value;
      updateLabel(initialRating);
    });
    </script>

