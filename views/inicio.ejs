            .input-control{
                margin-left: 5%;
            }

            .seleccion{
                margin-left: 5%;
                width: 90%;
            }

            

            .boton{
                margin-left: 3%;
                
            }

            .button{
                
                border-bottom: 1px solid rgb(157, 177, 245);
               
            }

            .titulo-principal{
                font-size: 1.5rem;
                text-align: center;
            }
          
            .producto-imagen{
                width: 100px;
                height: 50px;
            }

            .producto-detalles{
                margin: -10px ;
                padding: 1rem;
                border-radius: 1rem;
                margin-top: 2rem;
                height: 100px;
            }

            .info-producto{
                padding: 5px ;
                line-height: 0;
                display: flex;
                flex-direction: column;
                border-radius: 1rem;
                display: flex;
                flex-direction: column;
                gap: 0rem;
            }

            .producto-titulo{
             font-size: 0.5rem;
             text-align: center;
             margin-top: 10px; font-weight: bold;
            }
            .producto-precio{
             font-size: 0.8rem;
            
            }

            .contenedor-productos{
                margin: -1%;
            }

            figure{
                margin: 2%;
