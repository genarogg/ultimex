                margin: 5%;
                
            }

            .registrar{
                font-size: 0.8rem;
                font-weight: 700;
                
                
            }

            .decorar-arriba .ul-1 .li-1{
              margin: -20px;
            }

            .puntero-abajo{
                position: absolute;
