              transform: translate(23%);
            }

            .boton-lista {
              display: flex;
            }

            h6{
                font-weight: 300;
            }

            .header-mobile {
                margin-right: 5%;
                color: white;
                font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
